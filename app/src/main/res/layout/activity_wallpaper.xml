<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WallpaperActivity">

    <ImageView
        android:id="@+id/imgWallPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imgTopTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/top_trans"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imgWallpaperBack"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_margin="@dimen/_10sdp"
        android:adjustViewBounds="true"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/ig_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/imgBottomTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/bottom_trans"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txtApply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/wall_bg"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:text="@string/apply_now"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:textSize="@dimen/_15sdp"
        android:gravity="center_vertical|center_horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>