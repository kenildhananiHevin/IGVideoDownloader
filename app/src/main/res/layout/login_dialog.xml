<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/download_bg"
    android:padding="@dimen/_13sdp">

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/login"
        android:fontFamily="@font/sf_pro_text_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/do_you_want_to_login_your_instagram_account"
        android:fontFamily="@font/sf_pro_text_medium"
        android:textColor="@color/txt_color"
        android:textAlignment="center"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_txt">

        <TextView
            android:id="@+id/login_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:ellipsize="marquee"
            android:background="@drawable/cancle_bg"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:layout_marginEnd="@dimen/_7sdp"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/cancle"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:ellipsize="marquee"
            android:background="@drawable/delete_bg"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_7sdp"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/txtLogout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:ellipsize="marquee"
            android:background="@drawable/delete_bg"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_7sdp"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>