<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp">

    <ImageView
        android:id="@+id/imgMusic"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:adjustViewBounds="true"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/ig_music"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/audioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:ellipsize="marquee"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="Sample1"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgMusic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/audioDelete"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:adjustViewBounds="true"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/ig_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/audioShare"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/audioShare"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:adjustViewBounds="true"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/ig_share_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewAudioBorder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_color"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/imgMusic"/>


</androidx.constraintlayout.widget.ConstraintLayout>